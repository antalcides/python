% Definicion de funcion P de Riemann
\newcounter{PRiemannpos}
\setcounter{PRiemannpos}{0}
\newbox\PRa
\newbox\PRb
\newbox\PRc
\newcommand{\buildcolumn}[1]{
\setcounter{PRiemannpos}{0}
\@for \@PRiemannarg:=#1\do{
\ifcase\thePRiemannpos\global\setbox\PRa=\hbox{$\@PRiemannarg$}\or
        \global\setbox\PRb=\hbox{$\@PRiemannarg$}\or
        \global\setbox\PRc=\hbox{$\@PRiemannarg$}\fi
\addtocounter{PRiemannpos}{1}}%
}
\newcommand{\PRiemann}[4]{P\left\{ \begin{array}{cccc}
\buildcolumn{#1} \box\PRa &\box\PRb & \box\PRc \\
\buildcolumn{#2} \box\PRa &\box\PRb & \box\PRc & #4\\
\buildcolumn{#3} \box\PRa &\box\PRb & \box\PRc 
\end{array} \right\}}

