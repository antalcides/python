/* [wxMaxima: input   start ] */
f(x):=x^3+2*x+1; x0:-0.7; niter:25;
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
g(x):=(-x^3-1)/2;
/* [wxMaxima: input   end   ] */

