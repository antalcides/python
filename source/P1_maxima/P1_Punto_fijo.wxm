/* [wxMaxima: input   start ] */
n:0$ x1:x0$
for i:1 thru niter do (
    n:n+1,
    x1:g(x1),
    print("  x",n,"=",float(x1))
  );
print("    f(",box(float(x1)),")=",float(f(x1)))$
